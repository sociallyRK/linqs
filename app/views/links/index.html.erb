
<h2> Welcome To The Linqs App </h2>
<%= link_to "Browse All Tags", tags_path %>
<a id="displayText", href="javascript:toggle();">Add a link</a>
<a id="findlink", href="javascript:toggle();">Search For Link</a>
<!-- find link is currently hidden -->
<br>

<form id="new_link">
    <input type="text" id="title" placeholder="Title" >
    <input type="text" id="url" placeholder="URL">
    <input type="text" id="name" placeholder="tag">
    <input type="submit"  >
</form>
<form id="find_link">
    <input type="text" id="search_key" placeholder="Search ..">
    <input type="submit">
</form>

<br>
<br>
 <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Public Links:</h3>
  </div>
  <div class="panel-body">
   <table class="table table-hover"
    <ul id="publiclist">
        <% @links.each do |link| %> 
        <b><%= link.title %></b> 
          <%= link_to "comment", link_comments_path(link)%>
               - <%= link_to "edit", edit_link_path(link)%> - <%= link_to "delete", link_path(link),method: :delete %>   
                Likes <%= link.upvotes %>
                Dislikes <%= link.downvotes %>
                <a href="<%=link.url%>"><%= @link.url %></a>
                <%= link_to "Like", "/links/vote/upvote/#{link.id}", :class => 'btn btn-success' %>
                <%= link_to "Dislike", "/links/vote/downvote/#{link.id}", :class => 'btn btn-success' %> <br><%= link_to link.url, link.url %> <br> <br>
                Tagged: <% link.tags.each do |tag| %>
                <%= link_to tag.name, tag_path(tag) %>
                <% end %><br>
        <% end %>
     </ul>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Private Links:</h3>
  </div>
  <div class="panel-body">   
<ul id="privatelist">
    <% @linksprivate.each do |link| %>
    <%= link_to "edit", edit_link_path(link)%> <%= link_to "delete", link_path(link), method: :delete %>  <b><%= link.title %></b> - <%= link_to link.url, link.url %> Tagged:
    <% link.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
    <% end %><br>
    <% end %>
</ul>
 </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#displayText").on("click", function toggle() {
            var ele = document.getElementById("new_link");
            var text = document.getElementById("displayText");
            if (ele.style.display == "block") {
                ele.style.display = "none";
                text.innerHTML = "Add A Link";
            } else {
                ele.style.display = "block";
                text.innerHTML = "Hide Form";
            }
        });
        $('#new_link').on('submit', function (e) {
            e.preventDefault();
            var title = $('#title').val();
            var url = $('#url').val();
            var tag = $('#name').val();

            if (!title.length) {
                return;
            } else { // send user input to json
                $.ajax({
                    url: '/links',
                    method: 'post',
                    data: {
                        "link": {
                            "title": title,
                            "url": url,
                            "link_tags_attributes": {
                                "0": {
                                    "tag_attributes": {
                                        "name": tag
                                    }
                                }
                            }
                        }
                    },
                    dataType: "json",
                    success: function (data) {
                        console.log(data);
                        var publiclist = $('#publiclist')
                        var privatelist = $('#privatelist')
                        console.log(data.title);
                        console.log(data.url);
                        var newLink = $('<a href="/links/' + data.id + '/edit">edit</a> <a data-method="delete" href="/links/' + data.id + '" rel="nofollow">delete</a> <b>' + data.title + '</b> - <a href="' + data.url + '">' + data.url + '</a> <br>')
                        console.log(newLink);
                        if (data.tags[0].name === "private") {
                            privatelist.prepend(newLink)
                        } else {
                            $('.panel-body').prepend(newLink)
                        };
                    },
                    //return false;
                    error: function (data) {
                        console.log(data.responseText);
                        alert("Please input an appropriate Title, URL, and Tag");
                    }
                });
                $('#link_title').val("");
                $('#link_url').val("");
                $('#link_tags_name').val("");
            }
        });
    });
</script>
